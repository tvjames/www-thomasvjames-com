<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="<%- @site.url %>/js/vendor/modernizr.js"></script>

    <title><%= @getPreparedTitle() %></title>

    <%- @getBlock("meta").toHTML() %>

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Source+Code+Pro" type='text/css'>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" />
    <%- @getBlock("styles").add(@site.styles or []).add(@document.styles or []).toHTML() %>

    <link rel="alternate" href="<%- @getPreparedRssUrl() %>" type="application/rss+xml" title="RSS">
  </head>
  <body>


    <div class="row header">
      <div class="large-12 columns">
        <div class="row">
          <div class="large-12 columns">
            <h1>Thomas James <small>Just a geek.</small></h1>
            <h2><small>Technology, Gadgetry, Photography and Software Development</small></h2>
          </div>
        </div>
      </div>
    </div>




    <div class="row nav">
      <div class="large-12 columns">
        <div class="row">
          <div class="contain-to-grid sticky ">
            <nav class="top-bar" data-topbar data-options="sticky_on: large">
              <ul class="title-area">
                <li class="name">
                  <h1><a href="<%- @site.url %>">Home</a></h1>
                </li>
                <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
                <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
              </ul>

              <section class="top-bar-section">
                <!-- Left Nav Section -->
                <ul class="left">
                  <% for page in @getCollection("nav").toJSON(): %>
                    <li class="<%= @getNavClass(page) %>">
                      <a href="<%= page.url %>"><%= page.nav %></a>
                    </li>
                  <% end %>
                </ul>
                <ul class="title-area right">
                  <li><a href="https://twitter.com/thomasvjames"><i class="fa fa-twitter"></i></a></li>
                  <li><a href="https://github.com/tvjames"><i class="fa fa-github"></i></a></li>
                  <li class="name">
                    <h1><a href="<%- @site.url %>">thomasvjames.com</a></h1>
                  </li>
                </ul>



              </section>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <div class="row main">
      <div class="large-12 columns">

        <%- @content %>

      </div>
    </div>

    <div class="row base ">
      <div class="large-12 columns">
        <div class="row">
          <div class="large-4 columns text-right">
            &nbsp;
          </div>
          <div class="large-4 columns text-center">
            <ul class="side-nav">
              <li class="heading"><i class="fa fa-empire"></i> social</li>
              <li><a href="https://twitter.com/thomasvjames"><i class="fa fa-twitter"></i> twitter - @thomasvjames</a></li>
              <li><a href="https://github.com/tvjames"><i class="fa fa-github"></i> github - tvjames</a></li>
            </ul>
          </div>
          <div class="large-4 columns text-left">
            <ul class="side-nav">
              <li class="heading"><i class="fa fa-paper-plane"></i> stay in touch</li>
              <li><a href="<%- @getPreparedRssUrl() %>"><i class="fa fa-rss-square"></i> RSS Feed</a></li>
              <li><a href="<%- @getPreparedEmail() %>"><i class="fa fa-envelope-square"></i> Send me an email</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="row footer">
      <div class="large-12 columns">
        <p class="text-center"><small>Â© Thomas James 2014 - Some Rights Reserved - <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/"><img alt="Creative Commons License" style="border-width:0;margin:0;" src="http://i.creativecommons.org/l/by-sa/3.0/80x15.png"></a></small><br /><small>This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/">Creative Commons Attribution-ShareAlike 3.0 Unported License</a></small></p>
      </div>
    </div>

    <%- @getBlock('scripts').add(@site.scripts or [], {defer:false, async:false}).add(@document.scripts or [], {defer:false, async:false}).toHTML() %>
    <script>
      $(document).foundation();
      $.fn.tagcloud.defaults = {
        size: {start: 8, end: 22, unit: 'pt'},
        color: {start: '#008cba', end: '#546CFF'}
      };
      $(function () {
        $('section.tag-cloud a').tagcloud();
      });
    </script>

  </body>
</html>
